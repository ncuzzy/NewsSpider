        function timeToTime(time) {
            time = time.replace(/-/g, '/');
            var _timestamp = new Date(time),
                timestamp = new Date(),
                timeChange = Math.ceil((timestamp - _timestamp) / 1000) - 0,
                _date;
            if (timeChange < 60 * 60) {
                //时间小于一小时
                _date = Math.ceil(timeChange / 60) + '分钟前';
                return _date;
            } else if (timeChange < 60 * 60 * 24) {
                //时间小于24小时
                var _date = Math.ceil(timeChange / 3600) + '小时前'
                return _date;
            } else {
                _date = _timestamp.getMonth() + 1 + '-' + _timestamp.getDate();
                return _date;
            }
        }

